# DESCRIPTION: Profilo generico per applicazioni web standard
# Configurazione bilanciata per la maggior parte dei siti web
# Headers moderni e impostazioni conservative per compatibilità

# ==========================================
# AUTENTICAZIONE GENERICA
# ==========================================
# Token generici (da configurare manualmente se necessari)
XSRF_TOKEN=""
SESSION_TOKEN=""

# Basic auth (se necessario)
BASIC_AUTH=""

# ==========================================
# HEADERS BROWSER STANDARD
# ==========================================
# User Agent moderno e ampiamente compatibile
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/140.0.0.0 Safari/537.36"

# Accept headers bilanciati per compatibilità
ACCEPT="text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8"
ACCEPT_ENCODING="gzip, deflate, br"
ACCEPT_LANGUAGE="en-US,en;q=0.9,it;q=0.8"

# Connection headers standard
CONNECTION="keep-alive"
UPGRADE_INSECURE_REQUESTS="1"

# Headers di sicurezza moderni ma conservativi
SEC_CH_UA='"Chromium";v="140", "Google Chrome";v="140", "Not?A_Brand";v="99"'
SEC_CH_UA_MOBILE="?0"
SEC_CH_UA_PLATFORM='"Windows"'
SEC_FETCH_DEST="document"
SEC_FETCH_MODE="navigate"
SEC_FETCH_SITE="none"
SEC_FETCH_USER="?1"

# ==========================================
# CONFIGURAZIONE CONNESSIONE
# ==========================================
# Timeout bilanciati per la maggior parte dei siti
CONNECT_TIMEOUT="10"
MAX_TIME="30"

# SSL con validazione (ma flessibile)
INSECURE="false"
FOLLOW_REDIRECTS="true"
MAX_REDIRECTS="5"

# ==========================================
# PARAMETRI TESTING STANDARD
# ==========================================
# Delay standard per non essere troppo aggressivi
DEFAULT_DELAY="1.0"

# Jobs paralleli conservativi
DEFAULT_PARALLEL_JOBS="2"

# ==========================================
# LOGGING CONFIGURAZIONE
# ==========================================
# Log level informativo (non troppo verboso)
MIN_LOG_LEVEL="INFO"

# Headers logging disabilitato per default
LOG_HEADERS="false"

# ==========================================
# HEADERS COMUNI WEB
# ==========================================
# Headers per requests AJAX standard
X_REQUESTED_WITH="XMLHttpRequest"

# Content-Type per form submissions
CONTENT_TYPE="application/x-www-form-urlencoded"

# Cache control standard
CACHE_CONTROL="no-cache"

# ==========================================
# HEADERS API REST
# ==========================================
# Accept per API JSON
API_ACCEPT="application/json"

# Content-Type per API JSON
API_CONTENT_TYPE="application/json"

# ==========================================
# HEADERS COMPATIBILITÀ
# ==========================================
# Headers per compatibilità con CDN
CF_CONNECTING_IP=""
X_FORWARDED_FOR=""
X_REAL_IP=""

# Headers per load balancer
X_FORWARDED_PROTO=""
X_FORWARDED_HOST=""

# ==========================================
# CONFIGURAZIONE SICUREZZA
# ==========================================
# CSRF protection headers
X_CSRF_TOKEN=""

# CSP policy bypass (se necessario per testing)
CONTENT_SECURITY_POLICY=""

# ==========================================
# PERFORMANCE HEADERS
# ==========================================
# Headers per caching
LAST_MODIFIED=""
ETAG=""
IF_MODIFIED_SINCE=""
IF_NONE_MATCH=""

# ==========================================
# MOBILE/RESPONSIVE HEADERS
# ==========================================
# Viewport per responsive design
VIEWPORT="width=device-width, initial-scale=1.0"

# Device pixel ratio
DEVICE_PIXEL_RATIO="1"